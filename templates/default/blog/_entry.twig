{% extends "_layout.twig" %}

{% block content %}

  <!-- Page Header -->
  {% if entry.blogImage.one() %}
  <header class="masthead mb-0" style="background-image: url('{{ entry.blogImage.one().url() }}')">
  {% else %}
  <header class="masthead mb-0" style="background-image: url('{{alias('@web')}}/assets/banners/about.JPG')">
  {% endif %}
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>{{entry.title}}</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

<!-- Main Content -->
  <div class="container">
    <div class="row">
      <a href="{{alias('@web')}}/en/blog" class="btn btn-primary m-3">Tilbake</a>
    </div>
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <img src="{{ entry.blogImage.one().url() }}" style="max-height: 500px;" class="img-fluid my-3">
      </div>
      <div class="col-lg-6"> 

      </div>
    </div>
  </div>

{% endblock %}