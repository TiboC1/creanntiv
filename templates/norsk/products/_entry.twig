{% extends "_layout.twig" %}

{% block content %}

  <!-- Page Header -->
  <header class="masthead mb-0" style="background-image: url('{{ entry.productImage.one().url() }}')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1><em>"{{entry.title}}"</em></h1>
          </div>
        </div>
      </div>
    </div>
  </header>

<!-- Main Content -->
  <div class="container">
    <div class="row">
      <a href="{{alias('@web')}}/products" class="btn btn-dark m-3">Tilbake</a>
    </div>
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <img src="{{ entry.productImage.one().url() }}" type="button" style="max-width: 100%;" class="img-fluid" class="btn" data-toggle="modal" data-target="#Modal">
        <!-- Modal -->
        <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-body">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                        <img src="{{ entry.productImage.one().url() }}" style="max-width: 100%;" class="img-fluid p-3">
                    </div>
                </div>
            </div>
        </div>
      </div>
      <div class="col-lg-6"> 
        <div class="card">
          <div class="card-body">
            <h3 class="card-title display-3">{{entry.title}}</h3>
            <h4><small>Pris:</small> NOK {{entry.price}},-</h4>
            <p class="card-text"><span><small>Beskrivelse:</small></span> <em>"{{entry.descriptionNorwegian}}"</em></p>
            <p class="mb-2">Vil du kjope dette produktet?</p>
            <a href="{{alias('@web')}}/contact#main" class="btn btn-dark float-left">Ta Kontakt</a>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}