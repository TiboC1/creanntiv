{% extends "_layout.twig" %}

{% block content %}

  <!-- Page Header -->
  {% if entry.blogImage.one() %}
  <header class="masthead" style="background-image: url('{{ entry.blogImage.one().url() }}')">
  {% else %}
  <header class="masthead" style="background-image: url('{{alias('@web')}}/assets/banners/about.JPG')">
  {% endif %}
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>{{entry.title|capitalize}}</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

<!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <a href="{{alias('@web')}}/blog" class="btn btn-dark my-4">Tilbake</a>
      </div>
      <div class="col-lg-9 mx-auto">
        <h2 class="display-4 my-4 mb-4">{{ entry.title|capitalize }}</h2>
      {% if entry.blogImage.one() %}
        <img src="{{ entry.blogImage.one().url() }}" type="button" style="max-height: 700px; object-fit: cover; width: 100%;" class="img-fluid" class="btn" data-toggle="modal" data-target="#Modal">
        <!-- Modal -->
        <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-body">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                        <img src="{{ entry.blogImage.one().url() }}" style="max-width: 100%;" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
      {% endif %}
      {% if entry.bodyNorwegian %}
        <p><em>"{{entry.bodyNorwegian|capitalize}}"</em></p>
      {% endif %}
        <p class="text-muted my-1 float-right" >Skrevet {{ post.postDate | date("M d, Y") }}</p>
        <hr>
      </div>
    </div>
  </div>

{% endblock %}