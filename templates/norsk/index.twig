{% extends "_layout.twig" %}

{% block content %}

<!-- Page Header -->
  <header class="masthead" style="background-image: url('{{alias('@web')}}/assets/banners/index.JPG')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Creanntiv</h1>
            <span class="subheading">Lag noko eventyrleg ut av det daglegdagse.</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        {% for post in craft.entries().section('blog').limit(5) %}
          <div class="post-preview">
            <a href="{{ post.url }}">
              <h2 class="post-title">
                {{ post.title|capitalize }}
              </h2>
              {% if post.blogImage.one() %}
                <img src="{{ post.blogImage.one().url() }}" style="max-height: 500px;" class="img-fluid my-3">
              {% endif %}
              {% if post.bodyNorwegian != null %}
                <blockquote class="blockquote">
                  "{{ post.bodyNorwegian|slice(0,20)|capitalize }}
                  {% if post.bodyNorwegian|length > 20 %}
                  <span>...</span>
                  {% endif %}
                  "
                </blockquote>
              {% endif %}
            </a>
            <p class="text-muted my-1" >Skrevet {{ post.postDate | date("d M, Y") }}</p>
            <hr>
          </div>
        {% endfor %}
        <a href="{{alias('@web')}}/blog" class="btn btn-dark">Se alle posts</a>
      </div>
    </div>
  </div>

{% endblock %}